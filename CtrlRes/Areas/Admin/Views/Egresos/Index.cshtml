<div id="vista-tabla1" class="mt-5">

    <table id="Tabla" class="table display cell-border table-bordered" style="width:100%">
        <thead>
            <tr class="table-custom"><th colspan="8" style="text-align:center"><h3 class="text-center">Egresos</h3></th></tr>
            <tr class="table-secondary">
                <th>Id</th>
                <th>Tipo</th>
                <th>Concepto</th>
                <th>Monto</th>
                <th>Motivo</th>
                <th>Fecha</th>
                <th>Privada ID</th>
                <th class="not-export-col" style="text-align:center">Acciones</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
                <th>Filter..</th>
            </tr>
        </tfoot>
        <tbody>

            @foreach (var egresos in ViewBag.Egresos)
            {
                <tr>
                    <td>@egresos.Id</td>
                    <td>@egresos.Tipo</td>
                    <td>@egresos.Concepto</td>
                    <td>@egresos.Monto</td>
                    <td>@egresos.Motivo</td>
                    <td>@egresos.FechaRegistro</td>
                    <td>@egresos.Privada_Id</td>
                    <td class="text-center">
                        <a href='/Admin/Egresos/Edit/@egresos.Id' class='btn btn-success text-white' style='cursor:pointer; '>
                            <i class='fas fa-edit'></i> Editar
                        </a>
                        <button type="button" class="borrar btn btn-danger text-white" style='cursor:pointer; ' data-id="@egresos.Id" data-url="/Admin/Egresos/Delete/">
                            <i class='fas fa-trash-alt'></i> Borrar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scriptsdown {

    <script src="~/js/TablaCatalogos.js"></script>
}