		body {
			display: flex;
			flex-direction: row;
			height: 100vh;
			margin: 0;
			padding: 0;
		}

		.pdf-viewer-container {
			flex: 1;
			width: 50%;
			height: 100%;
			background-color: #f2f2f2;
			overflow: hidden;
		}

			.pdf-viewer-container::-webkit-scrollbar {
			width: 12px;
		}

			.pdf-viewer-container::-webkit-scrollbar-thumb {
			background-color: #fff;
			border-radius: 6px;
			border: 3px solid #111;
		}

		.pdf-selector-container {
			flex: 1;
			height: 100%;
			width: 100%;
			padding: 10px;
			box-sizing: border-box;
			background-color: #fafafa;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			order: 1;
			float: right;
		}

		.pdf-selector-container2 {
			flex: 1;
			height: 50%;
			width: 100%;
			padding: 10px;
			box-sizing: border-box;
			background-color: #e6e6e6;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			order: 1;
			float: right;
		}

		.pdf-form-container {
			flex: 1;
			height: 50%;
			width: 50%;
			background-color: #f2f2f2;
			overflow: auto;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			float:right;
		}

		.pdf-selector {
			padding: 10px;
			background-color: #fff;
			border-radius: 5px;
			box-shadow: 0 2px 4px rgba(0,0,0,.3);
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

			.pdf-selector label {
				font-size: 20px;
				margin-bottom: 10px;
			}

			.pdf-selector select {
				font-size: 16px;
				padding: 5px 10px;
				border: 1px solid #ccc;
				border-radius: 5px;
				background-color: #f9f9f9;
				width: 100%;
				margin-bottom: 10px;
				box-sizing: border-box;
			}

			.pdf-selector button {
				font-size: 16px;
				padding: 5px 10px;
				background-color: #4CAF50;
				color: #fff;
				border: none;
				border-radius: 5px;
				cursor: pointer;
			}

				.pdf-selector button:hover {
					background-color: #3e8e41;
				}

		body {
			padding-top: 40px;
		}

		.contenedor {
			width: 100%;
			display: flex;
			height: 100%;
		}

		.caja {
			height: 100px;
			/*border: 1px solid black;*/
