										<tr>
											<td>@item.Nombre</td>
											<td>
												<a class="btn btn-outline-dark" asp-controller="ArchivosPDF" asp-action="Descargar"
											   asp-route-id="@item.Id">Descargar archivo</a>
												<button class="btn btn-outline-dark viewButton" data-id="@item.Id">Ver</button>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
