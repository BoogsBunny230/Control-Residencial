<div class="container-fluid mt-5">

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 border-end border-3">
                            <!-- Top Content -->

                            <div id="vista-tabla1">

                                <table id="Tabla" class="table display cell-border table-bordered" style="width:100%">
                                    <thead>
                                        <tr class="table-custom"><th colspan="5" style="text-align:center"><h3 class="text-center">CATÁLOGO DE VIVIENDAS</h3></th></tr>
                                        <tr class="table-secondary">
                                            <th>Id</th>
                                            <th>Número o Identificador</th>
                                            <th>MedidorAgua</th>
                                            <th>Identificador de Privada</th>
                                            <th class="not-export-col" style="text-align:center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Filter..</th>
                                            <th>Filter..</th>
                                            <th>Filter..</th>
                                            <th>Filter..</th>
                                            <th>Filter..</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>

                                        @foreach (var viviendas in ViewBag.Viviendas)
                                        {
                                            <tr>
                                                <td>@viviendas.Id</td>
                                                <td>@viviendas.Numero</td>
                                                <td>@viviendas.MedidorAgua</td>
                                                <td>@viviendas.Privada_Id</td>
                                                <td class="text-center">
                                                    <a href='/Admin/Propietarios/Edit/@viviendas.Id' class='btn btn-success text-white' style='cursor:pointer; '>
                                                        <i class='fas fa-edit'></i> Editar
                                                    </a>
                                                    <button type="button" class="borrar btn btn-danger text-white" style='cursor:pointer; ' data-id="@viviendas.Id" data-url="/Admin/Viviendas/Delete/">
                                                        <i class='fas fa-trash-alt'></i> Borrar
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>






                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

